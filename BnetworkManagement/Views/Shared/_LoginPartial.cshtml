@using Microsoft.AspNetCore.Identity
@using BnetworkManagement.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right" style="padding-bottom:3em; padding-top:1.5em;margin-right: 1em; padding-left: 0.5em">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <p style="color:white;">Hello @UserManager.GetUserName(User)!</p>
            </li>
            <li>
                <button type="submit" id="log-out-button" class="btn btn-link navbar-btn navbar-link" style="color:red;display:none;">Log out</button>

            </li>

        </ul>

    </form>

}
else
{
    <div class="profile-userbuttons btn-group-justified" style="margin-left:20%;  margin-bottom:3em; margin-top:2em;width:60%;">
        <a asp-area="" asp-controller="Account" asp-action="Login" id="profile-login-button" class="btn btn-danger btn-xs btn-group-justifiet">Login</a>
        <a asp-area="" asp-controller="Account" asp-action="Register" id="profile-register-button" class="btn btn-primary btn-xs btn-group-justified">Register</a>

    </div>

}
    <hr size="30">
<style>
    #profile-login-button {
        width: 3em;
        height: 2em;
        font-size: 100%;
        color: white;
        padding: inherit;
        padding-top: 0.2em;
        font-weight: bold;
    }

    #profile-register-button {
        width: 3em;
        height: 2em;
        font-size: 100%;
        color: white;
        padding: inherit;
        font-weight: bold;
        padding-top: 0.2em;
        padding-left: 0em;
        margin-left: 0em;
        position: relative;
    }
</style>

